<%= div_for notification do%>
	<%= image_tag "#{current_user.avatar}&height=130&width=130", class: 'facebookfoto' %>
	<p>
		<%= link_to notification.sender.name, user_path(notification.sender) %> heeft je uitgenodigd voor een <%= notification.battle.theme %> battle.</br></br>
		<a href="www.facebook.com">Meer informatie...</a>
	</p>
	<%= link_to fa_icon("check", class:"notification_button_accept"), accept_notification_path(notification), method: :patch %>
	<%= link_to fa_icon("times", class:"notification_button_decline"), notification, method: :delete, data: { confirm: 'Weet je het zeker?' } %>
<% end %>


