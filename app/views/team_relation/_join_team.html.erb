<%= form_for TeamRelation.new do |f| %>
	<%= f.hidden_field :battle_id, value: @battle.id %>
	<%= f.hidden_field :user_id, value: @current_user.id %>
	<%= f.hidden_field :team, value: team %>
	<%= f.hidden_field :status, value: "joined" %>
	<%= f.submit "Join", class: "primary-button bottom-pusher", disabled: user_in_one_team(@current_user) == false %>
<% end %>