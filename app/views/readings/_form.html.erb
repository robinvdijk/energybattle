<%= simple_form_for @reading, :action => "create" do |f| %>
	<%= f.hidden_field :user_id, :value => current_user.id %>
	<%= f.hidden_field :battle_id, :value => params[:id] %>
    Laatste ingevoerde Meterstand: <%= current_user.readings.where(battle_id: @battle.id).last.amount if current_user.readings.where(battle_id: @battle.id).any? %> KWh
	<div class="form-group">
		<%= f.input :meter %>
	</div>
	<div class="form-group">
		<%= f.input :amount %>
	</div>
	<%= f.submit "Meterstand opslaan" %>
<% end %>