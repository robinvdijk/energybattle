<div class="inner-header">
	<ul>
		<% [["Home", :root], ["Battles", :theme]].each do |name,url| %>
		    <li><%= link_to_unless_current(name, url) do link_to name, url, class: "current" end %></li>
		<% end %>
		<div class="pull-right">
			<%= link_to image_tag("Bell.svg"), '', class: "icon-bell" %>
			<div class="notifications-center">
				<% if @count_notifications %>
					<div class="notifications">
						<%= render current_user.notifications %>
					</div>
				<% end %>
			</div>
			<%= link_to image_tag("Menu.svg"), '', class: "icon-menu" %>
		</div>
	</ul>
</div>

