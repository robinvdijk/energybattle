<div class="inner-header">
    <ul>
        <% [["Home", :root], ["Battles", :theme]].each do |name,url| %>
            <li><%= link_to_unless_current(name, url) do link_to name, url, class: "current" end %></li>
        <% end %>
        <%= link_to "Send post", '#', class: "send_notifications" %> |
        <%= link_to "Send invite requests to facebook friends", '#', class: "invite_with_fb" %> |
        <%= link_to "Post on feed", '#', class: "post_on_feed" %>
    </ul>
        <div class="rightmenu pull-right">
            <% if user_signed_in? %>
                <%= image_tag current_user.avatar, class: "facebookfoto" %>
                <%= link_to "Uitloggen", destroy_user_session_path, :method => :delete, class: "fb-btn" %>
                <%= link_to fa_icon("bell", class: "icon"), '#' %>
                <% if current_user.notifications.any? %>
                  <div class="reddot"><%= current_user.notifications.count %></div>
                  <div class="notifications-center">
                      <div class="notch"></div>
                      <div class="notifications"><%= render current_user.notifications %></div>
                  <% end %>
                </div>
                <%= link_to fa_icon("bars", class: "icon", id: "menu"), '#' %>
                <div class="st-menu st-effect-1" id="menu-1">
                    <div class="row">
                        <div class="span2 offset1" id="menu">
                          <ul>
                            <li>1</li>
                            <li>2</li>
                            <li>3</li>
                          </ul>
                        </div>
                    </div>
                </div>
            <% else %>
                <%= link_to "Inloggen met Facebook", user_omniauth_authorize_path(:facebook), class: "fb-btn" %>
            <% end %>
        </div>
        <div class="menu">hoi</div>
        </div>
    </ul>
</div>
