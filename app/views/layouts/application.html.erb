<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
	<script src="//cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"></script>
	<script src="http://cdn.oesmith.co.uk/morris-0.4.3.min.js"></script>
	<%= csrf_meta_tags %>
</head>
	<body>
		<header></header>
		<nav>
			<%= render 'layouts/header' %>
		</nav>
		<div class="container">
			<% if flash[:notice] %>
				<div class="notice"><%= flash[:notice] %></div>
			<% end %>
			<%= yield %>
		</div>
		<script>

		var jsonData = $.ajax({
      url: "http://localhost:3000/battles/11/readings.json", // make this url point to the data file
      dataType: "json",
      async: false
    }).responseText;

		var data = jQuery.parseJSON(jsonData);
		console.log(data);
	  Morris.Line({
	    element: 'hero-graph',
	    data: data,
	    xkey: 'period',
			xLabels: ['day'],
	    ykeys: ['Jeroen Stevens', 'Mathijs Kingma'],
	    labels: ['Meterstand'],
			ymin: 'auto',
			ymax: 'auto',
	    hideHover: 'auto'
	  });
		</script>
	</body>
</html>
