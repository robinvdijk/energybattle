<%= simple_form_for @battle, :action => "create" do |f| %>
	<%= f.hidden_field :host_id, value: @current_user.id %>
	<%= f.hidden_field :status, value: "pending" %>
	<%= hidden_field_tag :theme, params[:theme] %>
	<%= hidden_field_tag :game_type, params[:game_type] %>
	
	<div class="form-group">
		<%= f.input :title, :error_html => { :class => "error"} %>
	</div>
	<div class="form-group">
		<%= f.input :player_limit %>
	</div>
	<% unless params[:status] == "Edit"%>
	<div class="form-group">
		<%= f.input :theme, :input_html => { :value => params[:theme] }, disabled: true %>
	</div>
	<div class="form-group">
		<%= f.input :game_type, :input_html => { :value => params[:game_type] }, disabled: true %>
	</div>
	<div class="form-group">
		<%= f.input :start_date, :as => :datepicker %>
	</div>
	<div class="form-group">
		<%= f.input :duration, :collection => ([["1 Week", 604800], ["2 Weken", 1209600]]) %>
	</div>

	<% end %>
	
	<%= link_to 'submit', "#", :onclick => "$('#new_battle').submit()", class: "primary-button" %>

<% end %>