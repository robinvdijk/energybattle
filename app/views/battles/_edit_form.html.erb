<%= form_for @battle, :action => "create" do |f| %>
	<%= f.hidden_field :host_id, value: @current_user.id %>
	<%= f.hidden_field :status, value: "pending" %>
	<div class="form-group">
		<%= f.label :title, "Titel" %>
		<div class="form-attribute">
			<%= f.text_field :title %>
			<p>Hiermee bepaal je de naam van een battle</p>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :player_limit, "Spelers limiet" %>
		<div class="form-attribute">
			<%= f.number_field :player_limit %>
			<p>hiermee bepaal je hoeveel spelers er maximaal mee mogen spelen</p>
		</div>
	</div>
	<% unless params[:status] == "Edit"%>
	<div class="form-group">
		<%= f.label :theme, "Thema" %>
		<div class="form-attribute">
			<%= f.select :theme, options_for_select([params[:theme]]) %>
			<p></p>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :game_type, "Spelvorm" %>
		<div class="form-attribute">
			<%= f.select :game_type, options_for_select([params[:game_type]]) %>
			<p></p>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :start_date, "Start Datum" %>
		<div class="form-attribute">
			<%= f.text_field :start_date, class: "datepicker" %>
			<p></p>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :duration, "Duur" %>
		<div class="form-attribute">
			<%= f.select :duration, options_for_select([["1 Week", 604800], ["2 Weken", 1209600]]) %>
			<p></p>
		</div>
	</div>
	<% end %>
	<%= f.submit "Wijzigingen opslaan", class: "primary-button" %>
<% end %>