<div class="container">
	<h1>CreÃ«r een battle</h1>
	<div class="quarter_of_container">
		<h1>Instellingen</h1>
		<div class="pusher">
			<%= form_for @battle do |f| %>
				<%= f.hidden_field :host_id, value: @current_user.id %>
				<%= f.hidden_field :status, value: "Pending" %>
				<%= f.label :theme, "Theme" %>
				<%= f.select :theme, options_for_select([["Energy", "energy"], ["Dirt", "dirt"]]) %>
		</div>
				<%= f.submit "Save battle options"%>
			<% end %>
	</div>
	<div class="quarter_of_container">
		<h1>Team 1</h1>
		<div class='member'>
			<%= @current_user.first_name %>
			<%= @current_user.email %>
		</div>
	</div>
	<div class="quarter_of_container">
		<h1>Team 2</h1>
	</div>
	<div class="quarter_of_container">
		<h1>Uitnodigen</h1>
		<%= render 'users/search_members' %>
	</div>
</div>