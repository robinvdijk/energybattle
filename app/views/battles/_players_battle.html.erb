<% for user in @battle.users do %>
	<table>
		<tr>
		  	<td>Avatar</td>
		  	<td>Naam</td>
		  	<td>Score</td>
		</tr>
		<tr>
			<td><%= image_tag user.avatar %></td>
			<td><%= user.name %></td>
			<% unless user.readings %>
			<td><%= user.readings.sum(:amount) - user.readings.where(:battle_id => @battle.id).first.amount %></td>
			<% end %>
		</tr>
		<tr>
			<td><%= number_to_percentage 1 - ((user.readings.sum(:amount).to_f) / 12500) %></td>
		</tr>
	</table>
<% end %>