<% if @battle.status?("pending") %>
	<%= render 'settings_battle'%>
<% elsif @battle.status?("prepare") %>
	<%= render 'readings/upload_readings' %>
	<%= render 'players_battle' %>
<% elsif @battle.status?("started")%>
	<%= render 'readings/upload_readings' %>
	<%= render 'players_battle' %>
<% elsif @battle.status?("closing") %>
	<%= render 'readings/upload_readings' %>
	<%= render 'players_battle' %>
<% elsif @battle.status?("finished") %>
	<%= render 'players_battle' %>
<% end %>
