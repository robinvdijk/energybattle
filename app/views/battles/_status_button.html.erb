<%= form_for @battle do |f| %>
	<% if @battle.status?("Pending") %>
		<%= f.hidden_field :status, value: "Prepare" %>
		<%= link_to 'Prepare Battle', "#", :onclick => "$('#edit_battle_#{@battle.id}').submit()", class: "primary-button" %>
	<% elsif @battle.status?("Prepare") %>
		<%= f.hidden_field :status, value: "Start" %>
		<%= link_to 'Start Battle', "#", :onclick => "$('#edit_battle_#{@battle.id}').submit()", class: "primary-button" %>
	<% end %>
<% end %>
