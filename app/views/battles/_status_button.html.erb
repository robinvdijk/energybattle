<%= form_for @battle do |f| %>
    <% if @battle.status?("pending") %>
        <%= f.hidden_field :status, value: "prepare" %>
        <%= f.submit 'prepare', class: 'primary-button' %>
        <% elsif @battle.status?("prepare") && @battle.uploads_prepared? %>
        <%= f.hidden_field :status, value: "started" %>
        <%= f.submit 'Start', class: 'primary-button' %>
    <% end %>
<% end %>
