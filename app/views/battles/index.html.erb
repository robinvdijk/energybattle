<table cellpadding="5" cellspacing="5">
<thead>
  <tr>
	  <th>Thema</th>
	  <th>Status</th>
	  <th>Host name</th>
  </tr>
</thead>
<tbody>
	<% @battles.each do |s| %>
		<tr>
			<td><%= link_to s.theme, battle_path(s) %></td>
			<td><%= s.status %></td>
			<td><%= find_host(s.host_id).first_name %></td>
		</tr>
	<% end %>
</tbody>
<table>
<% not_accepted.each do |t| %>
	<div>
		<%= t.battle_id %>
		<%= t.team %>
	</div>
<% end %>
